{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "collectCoverageFrom": [
    "../src/**/*.ts",
    "!../src/main.ts"
  ],
  "coverageDirectory": "./coverage-e2e",
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}
